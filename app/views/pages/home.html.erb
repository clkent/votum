
<div class="row">
  <div class="col-md-6">
  <%= image_tag("cell-ss-intro.gif", width: '400') %>
  </div>

  <div class="col-md-5">
    <%= image_tag("votum-logo.jpg", width: '170') %>
    <p class="lead">Weâ€™ll send you a few texts each month, letting you know what Congress is voting on, ask for your opinion, and let your representatives know what you think.</p>

    <%#= render "devise/shared/links" %>

    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :class => 'simform', :id => "theForm") do |f| %>
      <%= devise_error_messages! %>

      <div><%= f.label :phone %><br />
      <%= f.phone_field :phone %></div>

      <div><%= f.label :first %><br />
      <%= f.text_field :first %></div>

      <div><%= f.label :last %><br />
      <%= f.text_field :last %></div>

      <div><%= f.label :address %><br />
      <%= f.text_field :address %></div>

      <div><%= f.label :city %><br />
      <%= f.text_field :city %></div>

      <div><%= f.label :state %><br />
      <%= f.text_field :state %></div>

      <div><%= f.label :zip %><br />
      <%= f.text_field :zip %></div>

      <div><%= f.label :email %><br />
      <%= f.email_field :email %></div>

      <div><%= f.label :password %><br />
      <%= f.password_field :password %></div>

      <div><%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation %></div>

      <div><%= f.submit "Sign up", :class => 'btn' %></div>
    <% end %>
  </div>

</div>
